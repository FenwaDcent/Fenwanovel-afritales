  <script>
    let userCoins = 85;

    function updateCoins() {
      document.getElementById("coins").textContent = userCoins;
    }

    function unlockChapter(chapter) {
      if (userCoins >= 30) {
        userCoins -= 30;
        alert("üîì Chapter " + chapter + " unlocked! Tap 'Read Free' to view.");
        updateCoins();
      } else {
        alert("‚ùå Not enough coins! Buy more to continue.");
      }
    }

    function readChapter(chap) {
      alert("üìñ Reading Chapter " + chap + "\n\nThis is where the full chapter text appears.\n\nIn final version, full text will load here.");
    }

    updateCoins();
  </script>
